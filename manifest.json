{
  "manifest_version": 3,
  "name": "QA-Pilot: AI Test Assistant",
  "version": "1.1",
  "description": "Records manual test steps and generates automation code via AI.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  }
}