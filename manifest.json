{
  "manifest_version": 3,
  "name": "QA-Pilot: AI Test Assistant",
  "version": "1.0.0",
  "description": "Records manual test steps and generates automation code via AI.",
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  }
}